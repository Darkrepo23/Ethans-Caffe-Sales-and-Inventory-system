            "name": "Commit-0",
            "content": "<!DOCTYPE html>\r\n<html lang=\"en\">\r\n\r\n<head>\r\n    <meta charset=\"UTF-8\">\r\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\r\n    <title>Manage Requests - Admin Dashboard</title>\r\n\r\n    <!-- Bootstrap 5 CSS -->\r\n    <link href=\"https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css\" rel=\"stylesheet\">\r\n    <!-- Font Awesome -->\r\n    <link rel=\"stylesheet\" href=\"https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css\">\r\n    <!-- Animate.css -->\r\n    <link rel=\"stylesheet\" href=\"https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css\">\r\n\r\n    <!-- Custom CSS -->\r\n    <link rel=\"stylesheet\" href=\"style.css\">\r\n    <link rel=\"stylesheet\" href=\"admin.css\">\r\n    <script>\r\n        // Immediate Sidebar State Initialization\r\n        (function () {\r\n            const html = document.documentElement;\r\n            html.classList.add('initializing');\r\n\r\n            const sidebarState = localStorage.getItem('sidebarActive');\r\n            if (sidebarState === 'true' && window.innerWidth >= 992) {\r\n                html.classList.add('sidebar-active');\r\n            }\r\n\r\n            // Auth Guard\r\n            try {\r\n                const role = localStorage.getItem('loggedInRole');\r\n                if (role !== 'admin' && role !== 'owner') {\r\n                    window.location.href = 'index.html';\r\n                }\r\n            } catch (e) {\r\n                window.location.href = 'index.html';\r\n            }\r\n        })();\r\n    </script>\r\n</head>\r\n\r\n<body>\r\n    <!-- Navigation Bar -->\r\n    <nav class=\"navbar navbar-expand-lg navbar-dark bg-black fixed-top shadow\">\r\n        <div class=\"container-fluid\">\r\n            <button class=\"sidebar-toggle mt-1 me-2\" id=\"sidebarToggle\">\r\n                <i class=\"fas fa-bars\"></i>\r\n            </button>\r\n\r\n            <button class=\"navbar-toggler\" type=\"button\" data-bs-toggle=\"collapse\" data-bs-target=\"#headerNav\">\r\n                <span class=\"fas fa-ellipsis-v\"></span>\r\n            </button>\r\n            <div class=\"collapse navbar-collapse\" id=\"headerNav\">\r\n                <ul class=\"navbar-nav ms-auto\">\r\n                    <li class=\"nav-item dropdown\">\r\n                        <a class=\"nav-link dropdown-toggle\" href=\"#\" role=\"button\" data-bs-toggle=\"dropdown\">\r\n                            <i class=\"fas fa-user-shield me-1\"></i>Administrator\r\n                        </a>\r\n                        <ul class=\"dropdown-menu dropdown-menu-end shadow border-0 animate__animated animate__fadeIn\">\r\n                            <li><a class=\"dropdown-item\" href=\"admin-system-settings.html\"><i\r\n                                        class=\"fas fa-cog me-2 text-danger\"></i>Settings</a></li>\r\n                            <li><a class=\"dropdown-item\" href=\"admin-activity-log.html\"><i\r\n                                        class=\"fas fa-history me-2 text-danger\"></i>Activity Log</a></li>\r\n                            <li>\r\n                                <hr class=\"dropdown-divider\">\r\n                            </li>\r\n                            <li><a class=\"dropdown-item text-danger\" href=\"#\" id=\"logoutBtn\"><i\r\n                                        class=\"fas fa-sign-out-alt me-2\"></i>Logout</a></li>\r\n                        </ul>\r\n                    </li>\r\n                </ul>\r\n            </div>\r\n        </div>\r\n    </nav>\r\n\r\n    <div class=\"dashboard-layout\">\r\n        <!-- Sidebar Navigation -->\r\n        <aside class=\"sidebar\" id=\"sidebar\">\r\n            <div class=\"sidebar-branding\">\r\n                <button class=\"sidebar-toggle in-sidebar\" id=\"sidebarToggleInternal\">\r\n                    <i class=\"fas fa-bars\"></i>\r\n                </button>\r\n                <a href=\"admin-dashboard.html\" class=\"sidebar-brand-group\">\r\n                    <img src=\"resources/ethans logo.jpg\" alt=\"Logo\">\r\n                    <span class=\"pos-label\">POS</span>\r\n                </a>\r\n            </div>\r\n            <div class=\"sidebar-nav\">\r\n                <div class=\"sidebar-section-title\">Navigation</div>\r\n                <a href=\"admin-dashboard.html\" class=\"sidebar-link\">\r\n                    <i class=\"fas fa-tachometer-alt\"></i>Dashboard\r\n                </a>\r\n                <a href=\"admin-menu-control.html\" class=\"sidebar-link\">\r\n                    <i class=\"fas fa-utensils\"></i>Menu Control\r\n                </a>\r\n                <a href=\"admin-recipe-control.html\" class=\"sidebar-link\">\r\n                    <i class=\"fas fa-book\"></i>Recipe Control\r\n                </a>\r\n                <a href=\"admin-ingredients-masterlist.html\" class=\"sidebar-link\">\r\n                    <i class=\"fas fa-boxes\"></i>Ingredients\r\n                </a>\r\n                <a href=\"admin-user-management.html\" class=\"sidebar-link\">\r\n                    <i class=\"fas fa-users\"></i>Users\r\n                </a>\r\n                <a href=\"admin-requests.html\" class=\"sidebar-link active\">\r\n                    <i class=\"fas fa-inbox\"></i>Requests\r\n                </a>\r\n\r\n                <div class=\"sidebar-divider\"></div>\r\n                <div class=\"sidebar-section-title\">Reports & Data</div>\r\n                <a href=\"admin-reports.html\" class=\"sidebar-link\">\r\n                    <i class=\"fas fa-chart-bar\"></i>Owner and Reports\r\n                </a>\r\n                <a href=\"admin-backup.html\" class=\"sidebar-link\">\r\n                    <i class=\"fas fa-database\"></i>Backup & Restore\r\n                </a>\r\n\r\n                <div class=\"sidebar-divider\"></div>\r\n                <div class=\"sidebar-section-title\">System</div>\r\n                <a href=\"admin-system-settings.html\" class=\"sidebar-link\">\r\n                    <i class=\"fas fa-cog\"></i>System Settings\r\n                </a>\r\n                <a href=\"admin-activity-log.html\" class=\"sidebar-link\">\r\n                    <i class=\"fas fa-history\"></i>Full Activity Log\r\n                </a>\r\n                <a href=\"admin-temp-account.html\" class=\"sidebar-link\">\r\n                    <i class=\"fas fa-user-clock\"></i>Temp Staff Account\r\n                </a>\r\n            </div>\r\n        </aside>\r\n\r\n        <!-- Main Content Area -->\r\n        <main class=\"main-content\">\r\n            <!-- Requests Content -->\r\n            <div id=\"requests-content\" class=\"page-content\">\r\n                <div\r\n                    class=\"d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom\">\r\n                    <h1 class=\"h2\"><i class=\"fas fa-inbox me-2 text-danger\"></i>Incoming Requests</h1>\r\n\r\n                </div>\r\n\r\n                <!-- Request Filters -->\r\n                <div class=\"card shadow mb-4\">\r\n                    <div class=\"card-body\">\r\n                        <div class=\"row align-items-center\">\r\n                            <div class=\"col-md-4 mb-2 mb-md-0\">\r\n                                <select class=\"form-select\" id=\"requestStatusFilter\">\r\n                                    <option value=\"Pending\">Show Pending Only</option>\r\n                                    <option value=\"All\">All Statuses</option>\r\n                                    <option value=\"Approved\">Approved Only</option>\r\n                                    <option value=\"Denied\">Denied Only</option>\r\n                                </select>\r\n                            </div>\r\n                            <div class=\"col-md-5 mb-2 mb-md-0\">\r\n                                <div class=\"input-group\">\r\n                                    <span class=\"input-group-text\"><i class=\"fas fa-search\"></i></span>\r\n                                    <input type=\"text\" class=\"form-control\" id=\"requestSearch\"\r\n                                        placeholder=\"Search by staff or item...\">\r\n                                </div>\r\n                            </div>\r\n                            <div class=\"col-md-3 text-end\">\r\n                                <span class=\"badge bg-danger rounded-pill px-3 py-2\" id=\"pendingRequestsBadge\">0 Pending\r\n                                    Requests</span>\r\n                            </div>\r\n                        </div>\r\n                    </div>\r\n                </div>\r\n\r\n                <!-- Requests Table -->\r\n                <div class=\"card shadow\">\r\n                    <div class=\"card-header bg-black text-white px-3\">\r\n                        <h6 class=\"m-0 font-weight-bold\"><i class=\"fas fa-list-alt me-1\"></i>Staff Request Log</h6>\r\n                    </div>\r\n                    <div class=\"card-body\">\r\n                        <div class=\"table-responsive scroll-container\">\r\n                            <table class=\"table table-hover align-middle\" id=\"requestsTable\">\r\n                                <thead>\r\n                                    <tr>\r\n                                        <th>Date</th>\r\n                                        <th>Staff Name</th>\r\n                                        <th>Request Type</th>\r\n                                        <th>Action/Target</th>\r\n                                        <th>Details</th>\r\n                                        <th>Status</th>\r\n                                        <th>Actions</th>\r\n                                    </tr>\r\n                                </thead>\r\n                                <tbody>\r\n                                    <tr>\r\n                                        <td colspan=\"7\" class=\"text-center\">Loading requests...</td>\r\n                                    </tr>\r\n                                </tbody>\r\n                            </table>\r\n                        </div>\r\n                    </div>\r\n                </div>\r\n\r\n                <!-- Locked Accounts Section -->\r\n                <div class=\"card shadow mt-4\">\r\n                    <div class=\"card-header bg-danger text-white px-3 d-flex justify-content-between align-items-center\">\r\n                        <h6 class=\"m-0 font-weight-bold\"><i class=\"fas fa-lock me-1\"></i>Locked Accounts (Brute Force Protection)</h6>\r\n                        <button class=\"btn btn-sm btn-light\" id=\"refreshLockedAccounts\">\r\n                            <i class=\"fas fa-sync-alt\"></i>\r\n                        </button>\r\n                    </div>\r\n                    <div class=\"card-body\">\r\n                        <div class=\"alert alert-info mb-3\">\r\n                            <i class=\"fas fa-info-circle me-2\"></i>\r\n                            Accounts below were locked after 5 failed login attempts. Unlock them to allow the user to login again.\r\n                        </div>\r\n                        <div class=\"table-responsive\">\r\n                            <table class=\"table table-hover align-middle\" id=\"lockedAccountsTable\">\r\n                                <thead>\r\n                                    <tr>\r\n                                        <th>Username</th>\r\n                                        <th>Full Name</th>\r\n                                        <th>Role</th>\r\n                                        <th>Locked At</th>\r\n                                        <th>Actions</th>\r\n                                    </tr>\r\n                                </thead>\r\n                                <tbody>\r\n                                    <tr>\r\n                                        <td colspan=\"5\" class=\"text-center py-3\">\r\n                                            <i class=\"fas fa-spinner fa-spin me-2\"></i>Loading locked accounts...\r\n                                        </td>\r\n                                    </tr>\r\n                                </tbody>\r\n                            </table>\r\n                        </div>\r\n                    </div>\r\n                </div>\r\n            </div>\r\n        </main>\r\n    </div>\r\n\r\n    <!-- Bootstrap 5 JS -->\r\n    <script src=\"https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js\"></script>\r\n    <script src=\"https://code.jquery.com/jquery-3.6.4.min.js\"></script>\r\n    <script src=\"https://cdn.jsdelivr.net/npm/sweetalert2@11\"></script>\r\n\r\n    <!-- Custom JS -->\r\n    <script src=\"main.js\"></script>\r\n    <script src=\"admin.js\"></script>\r\n\r\n    <script>\r\n        // Use standard loadRequests() from admin.js\r\n\r\n        // Locked Accounts Management\r\n        async function loadLockedAccounts() {\r\n            const tbody = document.querySelector('#lockedAccountsTable tbody');\r\n            try {\r\n                const response = await fetch('php/account_lockout.php?action=list');\r\n                const data = await response.json();\r\n                \r\n                if (!data.success || !data.accounts || data.accounts.length === 0) {\r\n                    tbody.innerHTML = `<tr><td colspan=\"5\" class=\"text-center text-success py-3\">\r\n                        <i class=\"fas fa-check-circle me-2\"></i>No locked accounts\r\n                    </td></tr>`;\r\n                    return;\r\n                }\r\n                \r\n                tbody.innerHTML = data.accounts.map(account => `\r\n                    <tr>\r\n                        <td><strong>${account.username || 'N/A'}</strong></td>\r\n                        <td>${account.full_name || 'N/A'}</td>\r\n                        <td><span class=\"badge bg-secondary\">${account.role_name || 'N/A'}</span></td>\r\n                        <td>${new Date(account.lockout_at).toLocaleString()}</td>\r\n                        <td>\r\n                            <button class=\"btn btn-sm btn-success\" onclick=\"unlockAccount(${account.user_id}, '${account.username}')\">\r\n                                <i class=\"fas fa-unlock me-1\"></i>Unlock\r\n                            </button>\r\n                        </td>\r\n                    </tr>\r\n                `).join('');\r\n            } catch (error) {\r\n                console.error('Error loading locked accounts:', error);\r\n                tbody.innerHTML = `<tr><td colspan=\"5\" class=\"text-center text-danger py-3\">\r\n                    <i class=\"fas fa-exclamation-circle me-2\"></i>Error loading locked accounts\r\n                </td></tr>`;\r\n            }\r\n        }\r\n\r\n        async function unlockAccount(userId, username) {\r\n            const result = await Swal.fire({\r\n                title: 'Unlock Account?',\r\n                html: `<p>Are you sure you want to unlock <strong>${username}</strong>?</p><p class=\"text-muted small\">They will be able to login again.</p>`,\r\n                icon: 'question',\r\n                showCancelButton: true,\r\n                confirmButtonText: 'Yes, Unlock',\r\n                confirmButtonColor: '#28a745',\r\n                cancelButtonText: 'Cancel'\r\n            });\r\n\r\n            if (!result.isConfirmed) return;\r\n\r\n            try {\r\n                const response = await fetch('php/account_lockout.php', {\r\n                    method: 'POST',\r\n                    headers: { 'Content-Type': 'application/json' },\r\n                    body: JSON.stringify({ action: 'unlock', user_id: userId })\r\n                });\r\n                \r\n                const data = await response.json();\r\n                \r\n                if (data.success) {\r\n                    Swal.fire({\r\n                        icon: 'success',\r\n                        title: 'Account Unlocked',\r\n                        text: `${username} can now login again.`,\r\n                        timer: 2000,\r\n                        showConfirmButton: false\r\n                    });\r\n                    loadLockedAccounts();\r\n                } else {\r\n                    Swal.fire('Error', data.message || 'Failed to unlock account', 'error');\r\n                }\r\n            } catch (error) {\r\n                console.error('Error unlocking account:', error);\r\n                Swal.fire('Error', 'Failed to unlock account', 'error');\r\n            }\r\n        }\r\n\r\n        // Initialize\r\n        document.addEventListener('DOMContentLoaded', function() {\r\n            loadLockedAccounts();\r\n            \r\n            document.getElementById('refreshLockedAccounts')?.addEventListener('click', loadLockedAccounts);\r\n        });\r\n    </script>\r\n</body>\r\n\r\n</html>"
        }
    ]
}