            </div>\r\n        </aside>\r\n\r\n        <!-- Main Content Area -->\r\n    <main class=\"main-content\">\r\n    <div id=\"temp-staff-account\" class=\"page-content\">\r\n        <div class=\"d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom\">\r\n            <h1 class=\"h2\"><i class=\"fas fa-user-clock me-2 text-danger\"></i>Temporary Staff Accounts</h1>\r\n            <div class=\"btn-toolbar mb-2 mb-md-0 gap-2\">\r\n                <!-- Role select + Enter Temporary Account button -->\r\n                <select class=\"form-select\" id=\"tempRoleSelect\" style=\"width: auto;\">\r\n                    <option value=\"\">Select Role</option>\r\n                </select>\r\n                <button class=\"btn btn-danger\" id=\"enterTempAccountBtn\">\r\n                    <i class=\"fas fa-sign-in-alt me-1\"></i> Enter Temporary Account\r\n                </button>\r\n            </div>\r\n        </div>\r\n\r\n        <div class=\"alert alert-warning\">\r\n            <i class=\"fas fa-exclamation-circle me-2\"></i>\r\n            <strong>Security Notice:</strong> Temporary accounts automatically expire and become inactive after their set duration.\r\n        </div>\r\n\r\n        <div class=\"row\">\r\n            <!-- Temporary Account History -->\r\n            <div class=\"col-lg-8\">\r\n                <div class=\"card shadow mb-4\">\r\n                    <div class=\"card-header bg-black text-white\">\r\n                        <h6 class=\"m-0 font-weight-bold\">Temporary Account History</h6>\r\n                    </div>\r\n                    <div class=\"card-body\">\r\n                        <div class=\"table-responsive\">\r\n                            <table class=\"table table-hover align-middle\" id=\"tempStaffTable\">\r\n                                <thead>\r\n                                    <tr>\r\n                                        <th>ID</th>\r\n                                        <th>Activated By</th>\r\n                                        <th>Activated At</th>\r\n                                        <th>Deactivated At</th>\r\n                                        <th>Note</th>\r\n                                    </tr>\r\n                                </thead>\r\n                                <tbody>\r\n                                    <tr>\r\n                                        <td colspan=\"5\" class=\"text-center\">No temporary account history</td>\r\n                                    </tr>\r\n                                </tbody>\r\n                            </table>\r\n                        </div>\r\n                    </div>\r\n                </div>\r\n            </div>\r\n\r\n            <!-- Temp Account Info -->\r\n            <div class=\"col-lg-4\">\r\n                <div class=\"card shadow border-left-danger\">\r\n                    <div class=\"card-body\">\r\n                        <h6 class=\"font-weight-bold text-danger mb-3\">About Temp Accounts</h6>\r\n                        <p class=\"small text-muted\">Use temporary accounts for:</p>\r\n                        <ul class=\"small text-muted ps-3\">\r\n                            <li>Onboarding new trainees</li>\r\n                            <li>Part-time weekend staff</li>\r\n                            <li>Emergency coverage</li>\r\n                            <li>Guest service providers</li>\r\n                        </ul>\r\n                        <p class=\"small text-muted mt-3\">All temp actions are logged and linked to the creator's admin ID for accountability.</p>\r\n                    </div>\r\n                </div>\r\n            </div>\r\n        </div>\r\n    </div>\r\n</main>\r\n    </div>\r\n\r\n    <!-- Modals -->\r\n    <div class=\"modal fade\" id=\"createTempAccountModal\" tabindex=\"-1\">\r\n        <div class=\"modal-dialog\">\r\n            <div class=\"modal-content\">\r\n                <div class=\"modal-header bg-danger text-white\">\r\n                    <h5 class=\"modal-title\"><i class=\"fas fa-user-clock me-2\"></i>Create Temporary Account</h5>\r\n                    <button type=\"button\" class=\"btn-close btn-close-white\" data-bs-dismiss=\"modal\"></button>\r\n                </div>\r\n                <div class=\"modal-body\">\r\n                    <form id=\"createTempAccountForm\">\r\n                        <div class=\"mb-3\">\r\n                            <label class=\"form-label\">Temporary Staff Name</label>\r\n                            <input type=\"text\" class=\"form-control\" id=\"tempStaffName\" required>\r\n                        </div>\r\n                        <div class=\"mb-3\">\r\n                            <label class=\"form-label\">Duration</label>\r\n                            <select class=\"form-select\" id=\"tempDuration\">\r\n                                <option value=\"8\">8 Hours (1 Shift)</option>\r\n                                <option value=\"24\">24 Hours (1 Day)</option>\r\n                                <option value=\"72\">3 Days</option>\r\n                                <option value=\"168\">7 Days (1 Week)</option>\r\n                            </select>\r\n                        </div>\r\n                        <div class=\"mb-3\">\r\n                            <label class=\"form-label\">Permissions Level</label>\r\n                            <select class=\"form-select\" id=\"tempPermissions\">\r\n                                <option value=\"Standard\">Standard (Sales Only)</option>\r\n                                <option value=\"Restricted\">Restricted (Sales No Voids)</option>\r\n                            </select>\r\n                        </div>\r\n                    </form>\r\n                </div>\r\n                <div class=\"modal-footer\">\r\n                    <button type=\"button\" class=\"btn btn-secondary\" data-bs-dismiss=\"modal\">Cancel</button>\r\n                    <button type=\"button\" class=\"btn btn-danger\" id=\"confirmCreateTempAccount\">Create Account</button>\r\n                </div>\r\n            </div>\r\n        </div>\r\n    </div>\r\n\r\n    <!-- Bootstrap 5 JS -->\r\n    <script src=\"https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js\"></script>\r\n    <script src=\"https://code.jquery.com/jquery-3.6.4.min.js\"></script>\r\n    <script src=\"https://cdn.jsdelivr.net/npm/sweetalert2@11\"></script>\r\n\r\n    <!-- Custom JS -->\r\n    <script src=\"main.js\"></script>\r\n    <script src=\"admin.js\"></script>\r\n\r\n    <script>\r\n        // Centralized logic handles these features\r\n    </script>\r\n</body>\r\n\r\n</html>"
