              </div>\r\n                    </div>\r\n                    \r\n                    <hr>\r\n                    \r\n                    <!-- Items List for Adjustment -->\r\n                    <h6 class=\"fw-bold mb-3\"><i class=\"fas fa-list me-2\"></i>Transaction Items</h6>\r\n                    <div class=\"table-responsive mb-3\" style=\"max-height: 200px; overflow-y: auto;\">\r\n                        <table class=\"table table-sm table-bordered\" id=\"txnItemsTable\">\r\n                            <thead class=\"table-light\">\r\n                                <tr>\r\n                                    <th>Item</th>\r\n                                    <th style=\"width: 80px;\">Qty</th>\r\n                                    <th style=\"width: 100px;\">Price</th>\r\n                                    <th style=\"width: 100px;\">Subtotal</th>\r\n                                </tr>\r\n                            </thead>\r\n                            <tbody id=\"txnItemsList\">\r\n                                <!-- Dynamic items -->\r\n                            </tbody>\r\n                        </table>\r\n                    </div>\r\n                    \r\n                    <hr>\r\n                    \r\n                    <!-- Action Type -->\r\n                    <div class=\"row mb-3\">\r\n                        <div class=\"col-md-6\">\r\n                            <label class=\"form-label small text-muted text-uppercase fw-bold\">Action Type</label>\r\n                            <select class=\"form-select\" id=\"txnActionType\">\r\n                                <option value=\"\">-- Select Action --</option>\r\n                                <option value=\"refund\">Refund (Full)</option>\r\n                                <option value=\"partial_refund\">Partial Refund</option>\r\n                                <option value=\"void\">Void Transaction</option>\r\n                            </select>\r\n                        </div>\r\n                        <div class=\"col-md-6\" id=\"adjustedTotalContainer\" style=\"display: none;\">\r\n                            <label class=\"form-label small text-muted text-uppercase fw-bold\">Adjusted Total</label>\r\n                            <div class=\"input-group\">\r\n                                <span class=\"input-group-text\">₱</span>\r\n                                <input type=\"number\" step=\"0.01\" class=\"form-control\" id=\"txnAdjustedTotal\" placeholder=\"0.00\">\r\n                            </div>\r\n                        </div>\r\n                    </div>\r\n                    \r\n                    <div class=\"mb-3\">\r\n                        <label class=\"form-label small text-muted text-uppercase fw-bold\">Reason <span class=\"text-danger\">*</span></label>\r\n                        <textarea class=\"form-control\" id=\"txnAdjustmentReason\" rows=\"3\" placeholder=\"Enter reason for refund/void...\" required></textarea>\r\n                    </div>\r\n                    \r\n                    <!-- Current Status Display -->\r\n                    <div class=\"alert alert-info d-none\" id=\"txnCurrentStatusAlert\">\r\n                        <i class=\"fas fa-info-circle me-2\"></i>\r\n                        <span id=\"txnCurrentStatusText\"></span>\r\n                    </div>\r\n                </div>\r\n                <div class=\"modal-footer\">\r\n                    <button type=\"button\" class=\"btn btn-secondary\" data-bs-dismiss=\"modal\">Cancel</button>\r\n                    <button type=\"button\" class=\"btn btn-danger\" id=\"saveTransactionAdjustment\">\r\n                        <i class=\"fas fa-save me-1\"></i> Save Adjustment\r\n                    </button>\r\n                </div>\r\n            </div>\r\n        </div>\r\n    </div>\r\n\r\n    <!-- Bootstrap 5 JS -->\r\n    <script src=\"https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.